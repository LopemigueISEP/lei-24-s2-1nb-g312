<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="720.0" prefWidth="720.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pt.ipp.isep.dei.g312.ui.gui.RegisterGreenSpaceUI">
    <children>
        <GridPane alignment="CENTER" hgap="10" prefHeight="728.0" prefWidth="720.0" vgap="10">
            <padding>
                <Insets bottom="25" left="25" right="25" top="25" />
            </padding>

            <!-- Colunas -->
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" percentWidth="20.0" />
                <ColumnConstraints percentWidth="60.0" />
                <ColumnConstraints hgrow="SOMETIMES" percentWidth="20.0" />
            </columnConstraints>

            <!-- Linhas -->
            <rowConstraints>
                <RowConstraints percentHeight="10.0" vgrow="SOMETIMES" />
                <RowConstraints percentHeight="12.0" vgrow="SOMETIMES" />
                <RowConstraints percentHeight="12.0" vgrow="SOMETIMES" />
                <RowConstraints percentHeight="12.0" vgrow="SOMETIMES" />
                <RowConstraints percentHeight="12.0" vgrow="SOMETIMES" />
                <RowConstraints percentHeight="12.0" vgrow="SOMETIMES" />
                <RowConstraints percentHeight="20.0" vgrow="SOMETIMES" />
            <RowConstraints />
            </rowConstraints>

            <!-- Título -->
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="US20 - Register a Green Space " GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="0" GridPane.valignment="CENTER">
                <font>
                    <Font name="Tahoma Bold" size="12.0" />
                </font>
            </Label>

            <!-- Campos de entrada -->
            <TextField fx:id="nameField" promptText="Enter Green Space Name" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER" />
            <TextField fx:id="addressField" promptText="Enter Address" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER" />
            <TextField fx:id="areaField" promptText="Enter Area (ha)" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="3" GridPane.valignment="CENTER" />

            <!-- ComboBox para a tipologia -->
            <ComboBox fx:id="typologyChoiceBox" prefHeight="25.0" prefWidth="728.0" promptText="Select Green Space Type" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="4" GridPane.valignment="CENTER" />

            <!-- Label para a indicação do gestor -->
            <HBox GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="5" GridPane.valignment="CENTER">
                <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Managed by: " />
                <Label fx:id="greenSpaceManagerLabel" style="-fx-font-size: 14px;" text="" />
            </HBox>

            <!-- Botão para registrar -->
            <Button onAction="#handleRegisterButtonAction" prefHeight="25.0" prefWidth="149.0" text="Register" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="6" GridPane.valignment="CENTER">
                <font>
                    <Font name="Tahoma Bold" size="12.0" />
                </font>
            </Button>

            <!-- Label para exibir mensagens -->
            <Label fx:id="messageLabel" GridPane.columnIndex="1" GridPane.columnSpan="1" GridPane.halignment="CENTER" GridPane.rowIndex="7" GridPane.valignment="CENTER" />

        </GridPane>
    </children>
</VBox>
